{% import "calm_ref.yaml.jinja2" as ref %}
{% macro Account() -%}

title: Account Spec
type: object
x-calm-dsl-type: account
properties:
  type:
    type: string
  sync_interval_secs:
    type: integer
    x-calm-dsl-display-name: sync_interval
  data:
    type: object
    x-calm-dsl-type: app_descriptor
    x-calm-dsl-display-name: resources
  tunnel_reference:
    x-calm-dsl-min-version: 4.3.0
    {{ ref.CalmRef() | indent(4) }}
    x-calm-dsl-display-name: tunnel

{%- endmacro %}
{% macro AccountSchema() -%}

Account:
  {{ Account()|indent(2) }}

{%- endmacro %}