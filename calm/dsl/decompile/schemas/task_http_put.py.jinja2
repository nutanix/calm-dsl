{%- elif obj.attrs.request_body is not defined %}
{%- if obj.calm_var_task %}CalmVarTask{%- else %}CalmTask{%- endif %}.HTTP.put({{ common_details(obj) }}, target={{obj.target}})
{%- else %}
{%- if obj.calm_var_task %}CalmVarTask{%- else %}CalmTask{%- endif %}.HTTP.put({{ common_details(obj) }}, body={{obj.attrs.request_body}}, target={{obj.target}})
