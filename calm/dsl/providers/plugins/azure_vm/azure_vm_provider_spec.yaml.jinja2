  dns_label:
    type: string
  type:
    type: string

{%- endmacro %}


{% macro azureNIC() -%}

title: Azure NIC
type: object
properties:
  nic_name:
    type: string
  vnet_name:
    type: string
  nsg_name:
    type: string
  subnet_name:
    type: string
  vnet_id:
    type: string
  nsg_id:
    type: string
  subnet_id:
    type: string
  private_ip_info:
    {{ azurePrivateIpInfo() | indent(4) }}
