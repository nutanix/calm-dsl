{% macro azureResources() -%}

title: AZURE Resources
type: object
properties:
  vm_name:
    type: string
  resource_group:
    type: string
  rg_details:
    {{ azureRgDetails() | indent(4) }}
  rg_operation:
    type: string
  availability_set_id:
    type: string
  account_uuid:
    type: string
  type:
    type: string
  location:
    type: string
  tag_list:
    type: array
    items:
      {{ azureTag() | indent(6) }}
  hw_profile:
    {{ azureHWProfile() | indent(4) }}
  storage_profile:
    {{ azureStorageProfile() | indent(4) }}
  os_profile:
    {{ azureOSProfile() | indent(4) }}
  nw_profile:
    {{ azureNWProfile() | indent(4) }}

{%- endmacro %}


{% macro azureCreateSpec() -%}

title: AZURE CreateSpec
type: object
properties:
  name:
    type: string
  type:
    type: string
    enum: [PROVISION_AZURE_VM, '']
    default: PROVISION_AZURE_VM
  resources:
    {{ azureResources() | indent(4) }}

